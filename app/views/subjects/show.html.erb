<p id="notice"><%= notice %></p>
<% @posts.each do |post| %>

    <div class="row">
        <div class="col-md-3">
            <p><%= post.resource_type %></p>
            <p><%= post.created_at.strftime("%b %d, %Y") %></p>
        </div>
        <div class="col-md-6">
            <p class="post-title"><%= post.title %></p>
            <p><%= post.summary %></p>
            <p><%= link_to post.file_url, post.file_url, target: "_blank" %></p>
        </div>
        <div class="col-md-3">
            <% if current_user %>
                <%= link_to like_post_path(post), method: :put do %>
                    <%= current_user.voted_as_when_voted_for(post) == true ? icon("heart fa-4x") : icon("heart-o fa-4x") %>
                <% end %>
            <% else %>
                <%= icon("heart-o fa-4x") %>
            <% end %>
        </div>
    </div>
    <hr>
<% end %>


<%= link_to "Add Post", new_post_path(subject_id: @subject.id),class: "btn btn-primary"%>

